#!/bin/bash

# Based off of Luke Smith's script of the same name.

# Show wifi ğŸ“¶ and percent strength or ğŸ“¡ if none.
# Show ğŸŒ if connected to ethernet or â if none.
# Show ğŸ”’ if a vpn connection is active

case $BLOCK_BUTTON in
	1) "$TERMINAL" -e nmtui; pkill -RTMIN+4 dwmblocks ;;
	3) notify-send "ğŸŒ Internet module" "\- Click to connect
ğŸ“¡: no wifi connection
ğŸ“¶: wifi connection with quality
â: no ethernet
ğŸŒ: ethernet working
ğŸ”’: vpn is active
" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

for path in /sys/class/net/w*; do
	ix=$(echo "$path" | sed 's/.*\/\(.*\)/\1/g')
	if [ "$(cat $path/operstate 2>/dev/null)" = "up" ]; then
		ssid="$(nmcli d show $ix | grep "GENERAL.CONNECTION" | tr -s ' ' | cut -d ' ' -f2- )"
		break
	fi
done

if [ "$ssid" ]; then
	printf "ğŸ“¶ %s" "$ssid"
else
	printf "â %s" "Down"
fi
